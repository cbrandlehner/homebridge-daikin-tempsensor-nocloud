{
  "name": "homebridge-daikin-tempsensor-nocloud",
  "version": "1.0.5",
  "description": "Provides temperature sensor for HomeKit as plugin for homebridge: https://github.com/nfarina/homebridge",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "daikin"
  ],
  "engines": {
    "node": ">=18.17.0",
    "homebridge": ">=1.6.1"
  },
  "author": "Christian Brandlehner",
  "contributors": [
    "Pierre-Julien Cazaux",
    "greensouth",
    "Fred de Gier",
    "Fabian Leutgeb"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud.git"
  },
  "dependencies": {
    "superagent": "^10.1.0"
  },
  "bugs": {
    "url": "https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud/issues"
  },
  "homepage": "https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/cbrandlehner"
    },
    {
      "type": "paypal",
      "url": "https://paypal.me/CBrandlehner"
    }
  ],
  "main": "index.js",
  "scripts": {
    "lint:json": "jsonlint -q package.json package-lock.json config.schema.json sample-config.json",
    "pretest": "npm run lint:json",
    "test": "xo"
  },
  "devDependencies": {
    "xo": "^0.59.3",
    "jsonlint": "^1.6.3" 
  },
  "xo": {
    "space": false,
    "rules": {
      "camelcase": "off",
      "no-mixed-spaces-and-tabs": "warn",
      "no-useless-escape": "warn",
      "indent": "off",
      "quotes": "warn",
      "capitalized-comments": "off",
      "no-var": "warn",
      "prefer-destructuring": "off",
      "prefer-arrow-callback": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "quote-props": "error",
      "no-unused-vars": "warn",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "complexity": [
        "error",
        25
      ],
      "unicorn/prefer-ternary": "off",
      "unicorn/prefer-module": "warn",
      "unicorn/no-anonymous-default-export": "off",
      "unicorn/expiring-todo-comments": "off"
    }
  }
}
