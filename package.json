{
  "name": "homebridge-daikin-tempsensor-nocloud",
  "version": "1.3.0",
  "description": "Provides temperature sensor for HomeKit as plugin for homebridge: https://github.com/nfarina/homebridge",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin",
    "daikin"
  ],
  "engines": {
    "homebridge": "^1.10.0 || ^2.0.0-beta.0",
    "node": "^20.15.1 || ^22.12.0"
  },
  "author": "Christian Brandlehner",
  "contributors": [
    "Pierre-Julien Cazaux",
    "greensouth",
    "Fred de Gier",
    "Fabian Leutgeb"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud.git"
  },
  "dependencies": {
    "superagent": "^10.2.3",
    "ws": "^8.18.0"
  },
  "bugs": {
    "url": "https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud/issues"
  },
  "homepage": "https://github.com/cbrandlehner/homebridge-daikin-tempsensor-nocloud#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/cbrandlehner"
    },
    {
      "type": "paypal",
      "url": "https://paypal.me/CBrandlehner"
    }
  ],
  "main": "src/index.js",
  "scripts": {
    "lint:json": "eslint --ext .json .",
    "pretest": "npm run lint:json",
    "test": "xo"
  },
  "devDependencies": {
    "@eslint/json": "^0.13.2",
    "eslint": "^9.39.1",
    "xo": "^1.2.3"
  },
  "xo": {
    "rules": {
      "stylistic/indent-binary-ops": "off",
      "@stylistic/indent": "off",
      "@stylistic/no-trailing-spaces": [
        "error",
        {
          "skipBlankLines": true
        }
      ],
      "@stylistic/comma-dangle": "off",
      "@stylistic/arrow-parens": [
        "warn",
        "as-needed"
      ],
      "@stylistic/brace-style": "off",
      "@stylistic/indent-binary-ops": [
        "warn",
        2
      ],
      "camelcase": "off",
      "capitalized-comments": "off",
      "curly": [
        "error",
        "multi-or-nest",
        "consistent"
      ],
      "no-mixed-spaces-and-tabs": "warn",
      "no-unused-vars": "warn",
      "no-useless-escape": "warn",
      "no-use-before-define": [
        "error",
        {
          "classes": false
        }
      ],
      "no-var": "warn",
      "object-shorthand": [
        "off",
        "always",
        {
          "ignoreConstructors": true
        }
      ],
      "prefer-arrow-callback": "warn",
      "prefer-destructuring": "warn",
      "promise/prefer-await-to-then": "off",
      "quotes": "off",
      "quote-props": "off",
      "unicorn/expiring-todo-comments": "off",
      "unicorn/no-anonymous-default-export": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prefer-string-replace-all": "warn",
      "unicorn/prefer-switch": "warn",
      "unicorn/prefer-ternary": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}